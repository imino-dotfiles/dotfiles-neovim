{
    "suggest.noselect": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    
    "languageserver": {
    
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
            "usePlaceholders": true

            }
        }
        ,
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
              ".stack.yaml",
              "cabal.config",
              "package.yaml"
                            ],
            "filetypes": [
                           "hs",
                           "lhs",
                           "haskell"
                         ],
            "initializationOptions": {
                "languageServerHaskell": {
                                           "hlint": true
                                         }
      }
    }
  }
}
